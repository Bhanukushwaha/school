


<p style="color: green"><%= notice %></p>
<a href="/friends/new" class="btn btn-outline-primary">New Record</a>
<table class="table">
  <h1>friend Record</h1>
  <thead>   
    <tr><br>
      <th></th>
        <th>First_name</th>
        <th>Last_Name</th>
        <th>Email</th>
        <th>Gender</th>
        <th>phone_no</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @friend.each_with_index do |friend, sindex| %>
      <tr>
        <td><%= sindex+1 %></td>
        <td><%= friend.first_name %></td>
        <td><%= friend.last_name %></td>
        <td><%= friend.email %></td>
        <td><%= friend.gender %></td>
        <td><%= friend.phone_no %></td>
        <td><%= link_to "Show", friend %></td>
        <td><%= link_to "Edit", edit_friend_path(friend) %></td>
        <td><%= button_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<script>
$(document).ready(function(){
  $("#stop").click(function(){
    $(this).hide();
  });
});
</script>

