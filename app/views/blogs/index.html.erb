<p style="color: green"><%= notice %></p>
<a href="/blogs/new">new record</a>
<table class="table">
  <h1>blog Record</h1>
  <thead>    
    <tr><br>
      <th></th>
        <th>Name</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each_with_index do |blog, sindex| %>
      <tr>
        <td><%= sindex+1 %></td>
        <td><%= blog.name %></td>
        <td><%= link_to "Show", blog %></td>
        <td><%= link_to "Edit", edit_blog_path(blog) %></td>
        <td><%= button_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

