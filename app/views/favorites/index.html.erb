<p style="color: green"><%= notice %></p>
<!-- <a href="/favorites/new" class="btn btn-outline-primary">New Record</a>
 --><table class="table">
  <h3>Favorite List</h3>
  <thead>   
    <tr><br>
      <th></th>
        <th>productname</th>
        <th>Description</th>
        <th>productPrice</th>
        <th>Productimage</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @favorites.each_with_index do |favorite,sindex| %>
    	<% product = favorite.product %>
      <tr>
      	<td><%= sindex+1 %></td>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><% if product.image.present? %><%= image_tag product.image&.url, style: "width:200px;" "height:70px;" %><% end %><br></td>



        <td><%= link_to "Remove Favorite", product_remove_favorite_path(product) %></td>
      </tr>
    <% end %>
  </tbody>


</table>
