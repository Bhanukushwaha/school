<p style="color: green"><%= notice %></p>
<a href="/products/new" class="btn btn-outline-info">new record</a>
<table class="table">
  <h1>product Record</h1>
  <thead>
    <h3><%= will_paginate @product %></h3>
    <tr><br>
      <th></th>
        <th>Name</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each_with_index do |product, sindex| %>
      <tr>
        <td><%= sindex+1 %></td>
        <td><%= product.name %></td>
        <td><%= link_to "Show", product, class: "btn btn-info" %></td>
        <td><%= link_to "Edit", edit_product_path(product), class: "btn btn-primary" %></td>
        <td><%= button_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>  