
<p style="color: green"><%= notice %></p>
<a href="/students/new" class="btn btn-outline-success">New Record</a>
<table class="table">
  <h1>student Record</h1>
  <thead>
    <h3><%= will_paginate @student %></h3>
    <tr><br>
      <th></th>
        <th>Name</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @students.each_with_index do |student, sindex| %>
      <tr>
        <td><%= sindex+1 %></td>
        <td><%= student.name %></td>
        <td><%= link_to "Show", student,class: "btn btn-primary" %></td>
        <td><%= link_to "Edit", edit_student_path(student), class: "btn btn-warning" %></td>
        <td><%= link_to "Destroy", student_destroy_path(student), method: :delete, class: "btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>
